{
    "collection": "customerSingleView",
    "database": "mybank",
    "filters": [
        {
            "name": "consultantCustomers",
            "query": {
                "consultant.email": "%%user.data.email"
            },
            "apply_when": {
                "%%values.roles.consultant": {
                    "$in": "%%user.custom_data.roles"
                }
            }
        },
        {
            "name": "userCustomers",
            "query": {
                "customerId": "%%user.custom_data.customerId"
            },
            "apply_when": {
                "%%values.roles.user": {
                    "$in": "%%user.custom_data.roles"
                }
            }
        },
        {
            "name": "regionManager",
            "query": {
                "address.country": {
                    "$in": "%%user.custom_data.regionManagerCountries"
                }
            },
            "apply_when": {
                "%%values.roles.regionManager": {
                    "$in": "%%user.custom_data.roles"
                }
            }
        }
    ],
    "roles": [
        {
            "name": "user",
            "apply_when": {
                "%%values.roles.user": {
                    "$in": "%%user.custom_data.roles"
                }
            },
            "fields": {
                "crmInformation": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {
                "read": true
            }
        },
        {
            "name": "employer",
            "apply_when": {
                "$or": [
                    {
                        "%%values.roles.admin": {
                            "$in": "%%user.custom_data.roles"
                        }
                    },
                    {
                        "%%values.roles.consultant": {
                            "$in": "%%user.custom_data.roles"
                        }
                    },
                    {
                        "%%values.roles.regionManager": {
                            "$in": "%%user.custom_data.roles"
                        }
                    }
                ]
            },
            "fields": {
                "crmInformation": {}
            },
            "read": true,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "default",
            "apply_when": {},
            "fields": {
                "crmInformation": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
