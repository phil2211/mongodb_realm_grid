{
    "collection": "customerSingleView",
    "database": "mybank",
    "filters": [
        {
            "name": "consultantCustomers",
            "query": {
                "consultant.email": "%%user.data.email"
            },
            "apply_when": {
                "%%user.custom_data.role": "consultant"
            }
        },
        {
            "name": "userCustomers",
            "query": {
                "customerId": "%%user.custom_data.customerId"
            },
            "apply_when": {
                "%%user.custom_data.role": "user"
            }
        },
        {
            "name": "regionManager",
            "query": {
                "address.country": {
                    "$in": "%%user.custom_data.regionManagerCountries"
                }
            },
            "apply_when": {
                "%%user.custom_data.role": "regionManager"
            }
        }
    ],
    "roles": [
        {
            "name": "user",
            "apply_when": {
                "%%user.custom_data.role": "user"
            },
            "fields": {
                "crmInformation": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {
                "read": true
            }
        },
        {
            "name": "employer",
            "apply_when": {
                "%%user.custom_data.role": {
                    "$in": "%%values.employerRoles"
                }
            },
            "fields": {
                "crmInformation": {}
            },
            "read": true,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "default",
            "apply_when": {},
            "fields": {
                "crmInformation": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
