{
    "collection": "customerSingleView",
    "database": "mybank",
    "filters": [
        {
            "name": "consultantCustomers",
            "query": {
                "consultant.email": "%%user.data.email"
            },
            "apply_when": {
                "%%values.roles.consultant": {
                    "$in": "%%user.custom_data.roles"
                }
            }
        },
        {
            "name": "userCustomers",
            "query": {
                "customerId": "%%user.custom_data.customerId"
            },
            "apply_when": {
                "%%values.roles.user": {
                    "%in": "%%user.custom_data.roles"
                }
            }
        }
    ],
    "roles": [
        {
            "name": "consultant",
            "apply_when": {
                "%%values.roles.consultant": {
                    "$in": "%%user.custom_data.roles"
                }
            },
            "fields": {
                "crmInformation": {}
            },
            "read": true,
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        },
        {
            "name": "user",
            "apply_when": {
                "%%values.roles.user": {
                    "%in": "%%user.custom_data.roles"
                }
            },
            "fields": {
                "crmInformation": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {
                "read": true
            }
        },
        {
            "name": "default",
            "apply_when": {},
            "fields": {
                "crmInformation": {}
            },
            "insert": false,
            "delete": false,
            "search": true,
            "additional_fields": {}
        }
    ]
}
